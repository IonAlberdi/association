#!/usr/bin/env node

"use strict";

/**
 * MediaScape SharedState - SharedCore.js
 * Main entrance point
 *
 * @author Andreas Bosl <bosl@irt.de>
 * @copyright 2014 Institut f√ºr Rundfunktechnik GmbH, All rights reserved.
 */

function SharedCore() {


    var config = require('./config');

    var log4js = require('log4js');
    log4js.configure(config.logConfig);
    var logger = log4js.getLogger('SharedCore');


    var db = null;
    var connectors = [];
    var MySocketsServer = {};

    setupDBConnection();
    setupClientConnection();


    function setupDBConnection() {
        if (config.db) {
            var connector = require(config.db.file);
            db = connector();

            db.on('removeState', sendRemoveState);

            db.on('changeState', sendChangeState);
        }
    };

    function setupClientConnection() {
        //TODO: make configable + put in array of clients

        var ExpressServer = require('./clientConnectors/ExpressServer.js');
        var MyExpressServer = ExpressServer();

        var SocketServer = require('./clientConnectors/SocketServer.js');
        MySocketsServer = SocketServer(MyExpressServer.getServer());

        MySocketsServer.on('getState', onGetState);

        MySocketsServer.on('changeState', onChangeState);

        MySocketsServer.on('join', onJoin);
    };


    function onChangeState(path, data) {
        if (db) {
            db.changeState(path, data);
        } else {
            logger.error('No DB connected?')
        }
    };


    function onGetState(path, data, callback) { //Done
        if (db) {
            db.getState(path, data, callback);
        } else {
            logger.error('No DB connected?')
        }
    };

    function onJoin(path, data, callback) { //Done
        //TODO: implement login via social graph

        if (data.token && data.agentID) {
            if (config.paths[path].allowedTokens.length != 0) {
                callback(config.paths[path].allowedTokens.indexOf(data.token) != -1);
            } else { // no tokens defined so free for all
                callback(true);
            }
        }

    };



    function sendRemoveState(path, data) {
        MySocketsServer.removeState(path, data);
    };

    function sendChangeState(path, data) {
        logger.debug('sendChangeState', path, data);
        MySocketsServer.changeState(path, data);
    };
}

module.exports = SharedCore;